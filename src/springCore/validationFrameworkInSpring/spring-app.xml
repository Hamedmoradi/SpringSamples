<beans xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
  xsi:schemaLocation="http://www.springframework.org/schema/beans 
  http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">
     
   <bean id="user" class="springCore.validationFrameworkInSpring.User">
    <property name="name" value=""/>
    <property name="age" value="16"/>
   </bean>
   
   <bean id="userValidator" class="springCore.validationFrameworkInSpring.UserValidator">
   	    <property name="location" value="springCore/validationFrameworkInSpring/messages_en.properties"/>
   </bean>

</beans>